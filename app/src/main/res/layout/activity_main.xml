<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayoutScreen"
    android:background="@color/main_screen_color"
    android:gravity="center_horizontal">

    <TextView
        style="@style/HeadingText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_56"
        android:paddingStart="@dimen/padding_16"
        android:text="@string/app_name"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/butSearch"
        style="@style/MainButtonStyle"
        android:text="@string/search"
        app:icon="@drawable/search_icon"
        android:layout_marginTop="@dimen/pad_24"/>

    <Button
        android:id="@+id/butMedia"
        style="@style/MainButtonStyle"
        android:layout_marginVertical="@dimen/padding_16"
        android:text="@string/media"
        app:icon="@drawable/media_icon"/>

    <Button
        android:id="@+id/butSettings"
        style="@style/MainButtonStyle"
        android:text="@string/settings"
        app:icon="@drawable/settings_icon"
        android:layout_marginBottom="@dimen/pad_28"/>

</LinearLayout>