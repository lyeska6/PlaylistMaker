<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:paddingHorizontal="@dimen/padding_16"
    android:paddingTop="14dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="28dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/butSearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cornerRadius="@dimen/corner_radius"
            android:backgroundTint="@color/white"
            android:text="@string/search"
            android:textSize="@dimen/text_size_main"
            android:textColor="@color/nice_black"
            app:icon="@drawable/search_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/nice_black"
            app:iconPadding="@dimen/icon_padding"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/butMedia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/padding_16"
            app:cornerRadius="@dimen/corner_radius"
            android:backgroundTint="@color/white"
            android:text="@string/media"
            android:textSize="@dimen/text_size_main"
            android:textColor="@color/nice_black"
            app:icon="@drawable/media_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/nice_black"
            app:iconPadding="@dimen/icon_padding"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/butSettings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cornerRadius="@dimen/corner_radius"
            android:backgroundTint="@color/white"
            android:text="@string/settings"
            android:textSize="@dimen/text_size_main"
            android:textColor="@color/nice_black"
            app:icon="@drawable/settings_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/nice_black"
            app:iconPadding="@dimen/icon_padding"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>

</LinearLayout>