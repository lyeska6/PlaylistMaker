<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LinearLayoutScreen" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_16</item>
        <item name="cornerRadius">@dimen/main_but_corner_radius</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:textColor">@color/nice_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/nice_black</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SearchBottomButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_marginTop">@dimen/pad_24</item>
        <item name="android:paddingHorizontal">@dimen/pad_14</item>
        <item name="android:paddingVertical">@dimen/pad_10</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/search_error</item>
        <item name="cornerRadius">@dimen/corner_rad_refresh_but</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/screen_color</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FrameLayoutSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_60</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pad_56</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="contentInsetStartWithNavigation">@dimen/pad_46</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
    </style>

    <style name="HeadingText.ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/heading_text</item>
    </style>

    <style name="HeadingText">
        <item name="android:paddingTop">@dimen/pad_14</item>
        <item name="android:paddingBottom">@dimen/padding_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="TrackTextSearch">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="AudioplayerInfoIndex">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
        <item name="android:layout_marginStart">@dimen/padding_16</item>
    </style>

    <style name="AudioplayerInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/player_main</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
        <item name="android:layout_marginEnd">@dimen/padding_16</item>
        <item name="android:layout_marginStart">@dimen/pad_8</item>
    </style>

    <style name="TabText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/player_main</item>
        <item name="android:paddingHorizontal">@dimen/pad_18</item>
    </style>
</resources>